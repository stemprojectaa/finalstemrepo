<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightblue"
    >


    <TextView
        android:id="@+id/medicineName"
        android:layout_width="370dp"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/edit_text_rounded"
        android:backgroundTint="@color/colorYellow"
        android:orientation="vertical"
        android:textSize="25dp"
        android:textStyle="italic" />


    <Button
        android:id="@+id/btnHome"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/medicineName"
        android:layout_below="@+id/medicineName"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_shape"
        android:text="Home"
        android:textColor="#F7FF1C" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_above="@+id/tableLayout"
        android:layout_alignStart="@+id/medicineName"
        android:layout_marginStart="54dp"
        android:background="@drawable/button_shape"
        android:text="Back"
        android:textColor="#F7FF1C" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/btnHome"
        android:layout_below="@+id/btnHome"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="97dp"
        android:id="@+id/tableLayout">
        >


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </TableLayout>

</RelativeLayout>






