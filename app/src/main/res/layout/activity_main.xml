<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightblue"
    tools:context="aa_stem.finallogscreen.MainActivity"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:text="Welcome to the Medical Adherence App"
        android:textAlignment="center"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:textSize="30dp"
        android:backgroundTint="@color/colorYellow"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="38dp"
        android:text="Our Goals"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_above="@+id/buttonLogin"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="45dp"
        android:text="Helps you take your medicine in a timely manner"
        android:textSize="17dp" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/button_shape"
        android:text="Login"
        android:textColor="#F7FF1C" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/buttonLogin"
        android:layout_marginStart="16dp"
        android:background="@drawable/button_shape"
        android:text="Register"
        android:textColor="#F7FF1C" />

</RelativeLayout>
